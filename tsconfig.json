{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "allowJs": true,
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true, 
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],
      "resolveJsonModule": true,
      "baseUrl": ".",
    },
    "include": ["src/**/*"]
  }
  